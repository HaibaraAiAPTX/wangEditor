{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es6",
      "DOM",
      "esnext"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "jsx", /* snabbdom jsx */
    "downlevelIteration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "node_modules",
    "build",
    "__tests__"
  ],
  "include": [
    "./tests/setup/index.ts",
    "./custom-types.d.ts",
    "./packages/*/src/**/*", "packages/editor/src/global.d.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.test.json"
    }
  ]
}